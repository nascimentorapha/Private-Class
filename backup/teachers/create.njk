{% extends "layout.njk" %}


{% block content %}

    
    <form class="card" method="POST" action="/teachers">

        <section class="avatar" style="opacity: 0.87; background: url(https://source.unsplash.com/collection/609053/500x500) no-repeat center center / cover">
        </section>
        
        <section class="details">
        
            <h3>Novo professor</h3>

            <div class="item">
                    <div>Avatar URL</div>
                    <div>
                        <input 
                            type="url"
                            name="avatar_url"
                            placeholder="http://"
                        >
                    </div>
                </div>

                <div class="item">
                    <div>Nome completo</div>
                    <div>
                        <input 
                        type="text"
                        name="name"
                        placeholder="Fernando Alves"
                        >                
                    </div>
                </div>

                <div class="item">
                    <div>Data de Nascimento</div>
                    <div>
                        <input 
                        type="date"
                        name="birth"
                        >
                    </div>
                </div>

                
                <div class="item">
                    <div>Grau de escolaridade</div>
                    <div class="education_level" style="width:200px;">
                        <select name="education_level">
                            <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                            <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                            <option value="Mestrado">Mestrado</option>
                            <option value="Doutorado">Doutorado</option>
                        </select>
                    </div>
                </div>
                
                <div class="item">
                    <div>Tipo de aula</div>
                    <div>
                        <span><input type="radio" name="class_type" value="P" checked>Presencial</span>
                        <span><input type="radio" name="class_type" value="D" checked>À Distância</span>
                    </div>
                </div>

                <div class="item">
                    <div>Matérias que leciona</div>
                    <div>
                        <input 
                        type="text" 
                        name="classes"
                        placeholder="Separe os serviços prestados por vírgula"
                        >
                    </div>
                </div>

                <button type="submit">Salvar</button>

        </section>

    </form>

{% endblock content %}
