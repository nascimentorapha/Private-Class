{% extends "layout.njk" %}


{% block content %}

    <div class="card table-container">
    
        <table width=100%>
        
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Tipo de Aula</th>
                    <th>Acompanhamento</th>
                    <th width="24px"></th>
                </tr>
            </thead>

            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td> <span style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></span>
                    {{teacher.name}}</td>
                    <td>{{ "À Distância" if teacher.class_type == "D" else "Presencial"}}</td>
                    <td>{{teacher.classes}}</td>
                    <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
                </tr>

                {% endfor %}
            </tbody>

        </table>

    </div>

{% endblock content %}
