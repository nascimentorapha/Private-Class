{% extends "layout.njk" %}


{% block content %}

    <div class="card">
    
        <section class="avatar" style="opacity: 0.7; background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
        </section>

        <section class="details">
            
            <h3>Detalhes</h3>

            <div class="item">
                <div>Instrutor</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.birth }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if teacher.gender == "M" else "Feminino" }}</div>
            </div>
            
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for class in teacher.classes %}

                        <span>{{ class }}</span>
                    
                    {% endfor %}

                </div>
            </div>
            
            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

        </section>

    </div>

{% endblock content %}
