{% extends "layout.njk" %}


{% block content %}

<div class="card">

    <section class="avatar" style="opacity: 0.71; background: url(https://source.unsplash.com/collection/609053/500x500) no-repeat center center / cover">
    </section>

    <section class="details">

        <form method="POST" action="/students?_method=PUT">
    
            <h3>Editar Professor</h3>

            {% include 'students/fields.njk' %}

            <input 
                type="hidden" 
                name="id" 
                value={{student.id}}>

        </form>

        <form class="button-delete" action="/students?_method=DELETE" method="post">
        
        <input type="hidden" name="id" value={{student.id}}>
        <button type="submit">Deletar</button>

        </form>

    </section>
</div>

{% endblock content %}
