{% extends "layout.njk" %}


{% block content %}

    <div class="card">
    
        <section class="avatar" style="opacity: 0.71; background: url({{ student.avatar_url }}) no-repeat center center / cover">
        </section>

        <section class="details">
            
            <h3>Detalhes</h3>

            <div class="item">
                <div>Instrutor</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ student.birth }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if student.gender == "M" else "Feminino" }}</div>
            </div>
            
            <div class="item">
                <div>Grau de escolaridade</div>
                <div class="education__level" style="width:200px;">{{ student.education_level }}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{ "À Distância" if student.class_type == "D" else "Presencial"}}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for class in student.classes %}

                        <span>{{ class }}</span>
                    
                    {% endfor %}

                </div>
            </div>
            
            <div class="item">
                <div>Desde</div>
                <div>{{ student.created_at }}</div>
            </div>

            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>

        </section>

    </div>

{% endblock content %}
