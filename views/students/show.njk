{% extends "layout.njk" %}


{% block content %}

    <div class="card">
    
        <section class="avatar" style="opacity: 0.71; background: url({{ student.avatar_url }}) no-repeat center center / cover">
        </section>

        <section class="details">
            
            <h3>Detalhes</h3>

            <div class="item">
                <div>Estudante</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ student.birth }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if student.gender == "M" else "Feminino" }}</div>
            </div>
            
            <div class="item">
                <div>Ano escolar</div>
                <div class="school__year" style="width:200px;">{{ student.school_year }}</div>
            </div>

            <div class="item">
                <div>Carga horÃ¡ria (semanal)</div>
                <div>{{student.hours_week}}</div>
            </div>
            
            <div class="item">
                <div>Desde</div>
                <div>{{ student.created_at }}</div>
            </div>

            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>

        </section>

    </div>

{% endblock content %}
